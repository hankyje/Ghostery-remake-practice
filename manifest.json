{
    "manifest_version": 2,
    "name": "Totally for real actual ghostery extension",
    "version":"0.0.1",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-scripts/friendly-notification.js"]
        }
